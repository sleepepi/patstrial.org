- content_for :tabs do
  - current_page = params[:controller].in?(%w(internal)) && params[:action].in?(%w(dashboard)) || params[:controller] == "reports"
  = link_to dashboard_path, class: "header-tab #{"header-tab-active" if current_page}", data: { object: "#{"suppress-click" if current_page?(dashboard_path)}" } do
    = icon("fas", "home")
    - if current_page
      Dashboard
    - else
      .d-none.d-sm-inline Dashboard

  - current_page = params[:controller].in?(%w(internal)) && params[:action].in?(%w(directory)) || params[:controller].in?(%w(sites))
  = link_to directory_path, class: "header-tab #{"header-tab-active" if current_page}", data: { object: "#{"suppress-click" if current_page?(directory_path)}" } do
    = icon("fas", "users")
    - if current_page
      Directory
    - else
      .d-none.d-sm-inline Directory

  - current_page = params[:controller].in?(%w(folders categories documents)) || (params[:controller] == "internal" && params[:action] == "category")
  = link_to documents_path, class: "header-tab #{"header-tab-active" if current_page}", data: { object: "#{"suppress-click" if current_page?(documents_path)}" } do
    = icon("fas", "file-alt")
    - if current_page
      Docs
    - else
      .d-none.d-sm-inline Docs

  - current_page = params[:controller].in?(%w(settings))
  = link_to settings_path, class: "header-tab #{"header-tab-active" if current_page}", data: { object: "#{"suppress-click" if current_page?(settings_path)}" } do
    = icon("fas", "cog")
    - if current_page
      Settings
    - else
      .d-none.d-sm-inline Settings

  - if false
    - current_page = params[:controller].in?(%w(internal)) && params[:action].in?(%w(reports))
    = link_to reports_path, class: "header-tab #{"header-tab-active" if current_page}", data: { object: "#{"suppress-click" if current_page?(reports_path)}" } do
      = icon("fas", "chart-area")
      - if current_page
        Reports
      - else
        .d-none.d-sm-inline Reports

  - current_page = params[:controller].in?(%w(internal)) && params[:action].in?(%w(search))
  = link_to search_path, class: "header-tab #{"header-tab-active" if current_page}", data: { object: "#{"suppress-click" if current_page?(search_path)}" } do
    = icon("fas", "search")
    - if current_page
      Search
    - else
      .d-none.d-sm-inline Search
