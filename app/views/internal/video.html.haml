.container
  .row
    .col-sm-9.col-sm-push-3
      .color-container.dark-purple
        %h1.brand= link_to @category.name, internal_category_path(@category.top_level, @category.slug)
        %h4.purple= @video.name

      .embed-responsive.embed-responsive-16by9{ style: 'margin-bottom: 20px' }
        %iframe.embed-responsive-item{ src: @video.embed_url, webkitallowfullscreen: true, mozallowfullscreen: true, allowfullscreen: true }
    .col-sm-3.col-sm-pull-9
      = render 'internal/menu'
