- @title = @category.name

- content_for :header, @title
= render "internal/tabs"
- content_for :breadcrumbs do
  %ol
    %li= link_to "docs", documents_path
    %li= link_to @category.name.downcase, internal_category_path(@category.top_level, @category.slug)
    %li.breadcrumb-muted= @video.name.downcase
- content_for :sidebar, render("documents/sidebar")

.embed-responsive.embed-responsive-16by9.mb-3
  %iframe.embed-responsive-item{ src: @video.embed_url, webkitallowfullscreen: true, mozallowfullscreen: true, allowfullscreen: true }

.jumbotron.jumbotron-custom-text
  = @video.name
