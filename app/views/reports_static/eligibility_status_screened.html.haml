- @title = "Eligibility Status - Screened - Reports"

- content_for :header, "Eligibility Status - Screened"
= render "internal/tabs"
- content_for :sidebar, render("internal/sidebar")


- report = Report.find_by(name: "Eligibility status - Screened")
- if report
  = render "reports/table", report: report if report.table?
  - report = nil

- report = Report.find_by(name: "Screen failures - Screened")
- if report
  = render "reports/table", report: report if report.table?
  - report = nil

- report = Report.find_by(name: "ENT requirement not met - Screened")
- if report
  = render "reports/table", report: report if report.table?
  - report = nil

- report = Report.find_by(name: "PSG requirement not met - Screened")
- if report
  = render "reports/table", report: report if report.table?
  - report = nil

- report = Report.find_by(name: "Reasons for disinterest in participation")
- if report
  = render "reports/table", report: report if report.table?
  - report = nil

- if false
  - if @eligibility_status && @eligibility_status[:tables]
    - @eligibility_status[:tables].each do |table|
      .dashboard-container.dashboard-table
        = render "reports_static/draw_advanced_table", table: table

.row{ style: "margin-top: 20px" }
  .col-md-4
  .col-md-4
    .jumbotron.text-center
      %h4.text-muted Eligibility - Screened
      .report-number
        = icon("fas", "list-alt")
  .col-md-4
    = link_to reports_static_eligibility_status_consented_path, class: "title-link" do
      .jumbotron.text-center
        %h4.text-muted Eligibility - Consented
        .report-number
          = icon("fas", "chevron-right")

= render "internal/data_last_updated"
