- @title = "#{@project.name} - Projects"
- @menu_title = @project.name

- content_for :header do
  .float-right
    = render "layouts/edit_delete_dropdown", edit_url: edit_project_path(@project), delete_url: @project, delete_confirmation: "Delete #{@project.name}?"
  Projects
= render "admin/tabs"
- content_for :breadcrumbs do
  %ol
    %li= link_to "projects", projects_path
    %li.breadcrumb-muted= @project.name.downcase
- content_for :sidebar, render("setup/sidebar")

.dashboard-container
  = render "forms/horizontal/show/text", object: @project, key: :name
  = render "forms/horizontal/show/generic", title: "Reports", content: @project.reports.count
