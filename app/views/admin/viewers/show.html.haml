- @title = @viewer.username

- content_for :container_class, "container-fluid"
- content_for :sidebar, render("setup/sidebar")
- content_for :header do
  .float-right
    = render "layouts/edit_delete_dropdown_lg", edit_url: edit_admin_viewer_path(@viewer), delete_url: admin_viewer_path(@viewer), delete_confirmation: "Delete \"#{@viewer.username}\"?"
  = @title

.dashboard-container
  = render "forms/horizontal/show/text", object: @viewer, key: :username
  = render "forms/horizontal/show/generic", title: "Password", content: render("admin/viewers/password", viewer: @viewer)
  = render "forms/horizontal/show/generic", title: "Sign in count", content: number_with_delimiter(@viewer.sign_in_count)
  = render "forms/horizontal/show/text", object: @viewer, key: :description
