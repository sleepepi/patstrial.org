- @title = 'Setup'
.row
  .col-sm-9.col-sm-push-3
    .section-heading-internal
      %h1= @title
      .section-description Welcome to the PATS website setup overview!
    .row
      - if current_user.admin?
        .col-md-4
          .panel.panel-primary{ style: 'min-height: 250px' }
            .panel-heading
              %h3.panel-title Users
            .panel-body
              %ul
                %li Approve users
                %li Set roles
                %li Modify names and emails
              %br
              .center
                = link_to admin_users_path, class: 'btn btn-xs btn-default' do
                  %span.glyphicon.glyphicon-cog
                  Edit Users

      - if current_user.editor?
        .col-md-4
          .panel.panel-primary{ style: 'min-height: 250px' }
            .panel-heading
              %h3.panel-title Directory
            .panel-body
              %ul
                %li Add members
                %li Change site membership
                %li Modify contact information
              %br
              .center
                = link_to editor_members_path, class: 'btn btn-xs btn-default' do
                  %span.glyphicon.glyphicon-cog
                  Edit Directory

        .col-md-4
          .panel.panel-primary{ style: 'min-height: 250px' }
            .panel-heading
              %h3.panel-title Folders
            .panel-body
              %ul
                %li Create folders
                %li Upload documents
                %li Embed videos
              %br
              .center
                = link_to editor_categories_path, class: 'btn btn-xs btn-default' do
                  %span.glyphicon.glyphicon-cog
                  Edit Folders
  .col-sm-3.col-sm-pull-9
    = render 'setup/menu'
