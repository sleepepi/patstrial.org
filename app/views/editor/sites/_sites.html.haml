%table.table.table-striped.table-borderless.table-hover.table-sticky
  %thead
    %tr
      = th_sort_field @order, 'sites.name', 'Name'
      = th_sort_field @order, 'sites.address', 'Address'
      %th Actions

  - @sites.each do |site|
    %tr
      %td= link_to site.name, editor_site_path(site)
      %td= site.address
      %td.nowrap
        = link_to 'Edit', edit_editor_site_path(site), class: 'btn btn-light btn-sm'
        = link_to 'Delete', editor_site_path(site), method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: "Are you sure you want to delete Site #{site.name}?" }

.center-horizontally
  = paginate @sites, theme: 'bootstrap'
