.container
  .row
    .col-sm-3
      = render 'setup/menu'
    .col-sm-9
      .color-container.dark-purple
        %h1.brand
          = link_to 'Folders', editor_categories_path(@category)
          &middot;
          = link_to @category.name, editor_category_path(@category)
          &middot;
          Documents
        %h4.purple
          You may
          %strong archive documents
          you wish to hide from the menu.
        = link_to 'Add New Document', new_editor_category_document_path(@category), class: 'btn btn-xs btn-default'

      = render 'documents'
