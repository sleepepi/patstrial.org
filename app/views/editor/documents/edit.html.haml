- @title = "Edit Document: #{@document.name}"

.row
  .col-md-9.order-2
    .section-heading-internal
      %h1
        = link_to 'Folders', editor_categories_path
        &middot;
        = link_to @category.name, editor_category_path(@category)
        &middot;
        = link_to 'Documents', editor_category_documents_path(@category)
        &middot;
        = link_to @document.name, editor_category_document_path(@category, @document)
        &middot;
        Edit

    .section-body
      = render 'form'

  .col-md-3.order-1
    = render 'setup/menu'
