$("#documents_count").html("<%= @category.documents.count %>");

<% if @documents_count == @category.documents.count %>
  <% fallback_url = new_editor_category_document_path(@category) %>
  $(".filedrag").html("<div>An error occurred, the documents could not be uploaded!<br /><br />Please try again or <a href=\"<%= fallback_url %>\">upload the documents</a> manually.</div>");
<% else %>
  $(".filedrag").html("Drag documents here to attach to category.<br /><br />Upload successful!<br />");
<% end %>
