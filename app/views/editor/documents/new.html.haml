- @title = 'New Document'

.container
  .row
    .col-sm-9.col-sm-push-3
      .color-container.dark-purple
        %h1.brand
          = link_to 'Folders', editor_categories_path(@category)
          &middot;
          = link_to @category.name, editor_category_documents_path(@category)
          &middot;
          = link_to 'Documents', editor_category_documents_path(@category)
          &middot;
          New Document
        %h4.purple
          Documents can be one of:
          %code doc
          %code docx
          %code pdf
          %code rtf
          %code xls
          %code xlsx
          %code csv

      .color-container
        = render 'form'

    .col-sm-3.col-sm-pull-9
      = render 'setup/menu'
