- @title = "Edit Video: #{@video.name}"

.container
  .row
    .col-sm-3
      = render 'setup/menu'
    .col-sm-9
      .color-container.dark-purple
        %h1.brand
          = link_to 'Folders', editor_categories_path(@category)
          &middot;
          = link_to @category.name, editor_category_path(@category)
          &middot;
          = link_to 'Videos', editor_category_videos_path(@category)
          &middot;
          = link_to @video.name_was, editor_category_video_path(@category, @video)
          &middot;
          Edit

      .color-container
        = render 'form'

