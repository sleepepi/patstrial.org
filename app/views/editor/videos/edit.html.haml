- @title = "Edit Video - #{@video.name} - Videos - #{@category.name}"

- content_for :header, @video.name
= render "admin/tabs"
- content_for :breadcrumbs do
  %ol
    %li= link_to "folders", editor_categories_path
    %li= link_to @category.name.downcase, editor_category_path(@category)
    %li= link_to "videos", editor_category_videos_path(@category)
    %li= link_to @video.name.downcase, editor_category_video_path(@category, @video)
    %li.breadcrumb-muted edit
- content_for :sidebar, render("setup/sidebar")

.dashboard-container= render "form", video: @video
