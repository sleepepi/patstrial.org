.row
  .col-sm-9.col-sm-push-3
    .section-heading-internal
      %h1
        = @committee.name
      = link_to 'Edit Committee', edit_editor_committee_path(@committee), class: 'btn btn-xs btn-default'
      = link_to 'Add Committee Member', new_editor_committee_committee_member_path(@committee), class: 'btn btn-xs btn-default'

    .section-body
      %table.table.table-striped
        %tr
          %td Name
          %td= @committee.name

        %tr
          %td Description
          %td= @committee.description

        %tr
          %td Slug
          %td= @committee.slug

        %tr
          %td Position
          %td= @committee.position

        %tr
          %td Members
          %td= render 'editor/committee_members/index'
  .col-sm-3.col-sm-pull-9
    = render 'setup/menu'
