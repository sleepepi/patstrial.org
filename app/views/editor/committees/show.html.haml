- @title = @committee.name

- content_for :container_class, "container-fluid"
- content_for :sidebar, render("setup/sidebar")
- content_for :header do
  .float-right
    = render "layouts/edit_delete_dropdown_lg", edit_url: edit_editor_committee_path(@committee), delete_url: editor_committee_path(@committee), delete_confirmation: "Delete \"#{@committee.name}\"?"
  = @title
  = link_to "Add Committee Member", new_editor_committee_committee_member_path(@committee), class: "btn btn-sm btn-light"

.dashboard-container
  = render "forms/horizontal/show/text", object: @committee, key: :name
  = render "forms/horizontal/show/text", object: @committee, key: :slug, key_name: "URL Slug"
  = render "forms/horizontal/show/text", object: @committee, key: :description
  = render "forms/horizontal/show/text", object: @committee, key: :position
  = render "forms/horizontal/show/generic", title: "Members", content: render("editor/committee_members/index")
