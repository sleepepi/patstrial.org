!!!
%html{ lang: "en" }
  %head
    %meta{ charset: "utf-8" }
    %meta{ content: "IE=Edge,chrome=1", http: { equiv: "X-UA-Compatible" } }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1, shrink-to-fit=no" }
    = render "layouts/meta/general"
    -# Don't cache any pages
    %meta{ name: "turbolinks-cache-control", content: "no-cache" }
    %title= [@title, (@breadcrumbs || []).reverse.collect(&:first), "PATS Trial"].flatten.compact.join(" - ").html_safe
    = favicon_link_tag
    = csrf_meta_tags

    = stylesheet_link_tag "application", media: "all", data: { turbolinks_track: "reload" }
    = javascript_include_tag "application", data: { turbolinks_track: "reload" }
  - @theme = "royal"
  %body#top.full-page-no-header.theme-bg{ class: @theme ? "theme-#{@theme}-bg" : nil, data: { spy: "scroll", target: ".navbar", offset: "60" } }
    .row.no-gutters.flex-nowrap
      = yield :sidebar
      .col
        .page-box.last-box.p-0
          = render "layouts/features/service_announcement", container: defined?(container) && container.present? ? container : "container"
          = render "layouts/features/flash_bar"
          #top-menu.top-menu= render "layouts/menu", container: "#{yield(:container_class)} px-lg-0", menu: @theme ? "menu-#{@theme}" : nil, hide_logo: true
          - if content_for?(:header)
            .header-container
              .container-fluid
                %h1.page-heading
                  = yield :header
          = render "layouts/breadcrumbs" # PATS extra
          %main.p-3{ role: "main" }= yield
    = yield :footer
    = render "layouts/footer", container: yield(:container_class), footer: @theme ? "footer-#{@theme}" : nil
