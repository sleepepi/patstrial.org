- footer = "footer-default" unless defined?(footer) && footer.present?
.footer-container{ class: footer }
  .container
    .footer
      .footer-on-top
        = image_tag "pats-girl.png", alt: "", height: "40px", style: "text-align: right;"
        = image_tag "pats-boy.png", alt: "", height: "40px", style: "text-align: right;"
      .nowrap
        .float-right
          Funded By
          = link_to "https://clinicaltrials.gov/show/NCT02562040", target: "_blank" do
            %span.d-inline.d-lg-none
              NHLBI
            %span.d-none.d-lg-inline
              National Heart, Lung, and Blood Institute
        &copy;
        = Time.zone.today.year
        = link_to "PATS Trial", root_path
