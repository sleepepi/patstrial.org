.footer-container.footer-custom
  %div{ class: @container.presence || "container" }
    .footer
      .footer-on-top
        = image_tag "pats-girl.png", alt: "", height: "40px", style: "text-align: right;"
        = image_tag "pats-boy.png", alt: "", height: "40px", style: "text-align: right;"
      .nowrap.row

        .col
          &copy;
          .d-none.d-sm-inline= Time.zone.today.year
          = link_to ENV["website_name"], root_path
          \-
          = link_to "NHLBI Funded", "https://clinicaltrials.gov/show/NCT02562040"

        .col.text-center.d-none.d-sm-block
          - if false
            %small.px-2= link_to "Terms", terms_and_conditions_path
          %small.px-2= link_to "Privacy", privacy_policy_path

        .col.text-right
          .d-none.d-md-inline powered by
          = link_to image_tag("logos/slice-v5-transparent-logo.png", size: "96x32", alt: "", style: "margin-top: -10px;"), ENV["slice_url"]
