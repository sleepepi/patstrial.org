!!!
%html{ lang: "en" }
  %head
    %meta{ charset: "utf-8" }
    %meta{ content: "IE=Edge,chrome=1", http: { equiv: "X-UA-Compatible" } }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1, shrink-to-fit=no" }
    = render "layouts/meta/general"
    -# Don't cache any pages
    %meta{ name: "turbolinks-cache-control", content: "no-cache" }
    %title= [@title, "PATS Trial"].compact.join(" - ").html_safe
    = favicon_link_tag
    = csrf_meta_tags

    = stylesheet_link_tag "application", media: "all", data: { turbolinks_track: "reload" }
    = javascript_include_tag "application", data: { turbolinks_track: "reload" }
  - @theme = "royal"
  %body#top.full-page.theme-bg{ class: @theme ? "theme-#{@theme}-bg" : nil, data: { spy: "scroll", target: ".navbar", offset: "60" } }
    = render "layouts/features/service_announcement", container: defined?(container) && container.present? ? container : "container"
    = render "layouts/features/flash_bar"
    #top-menu.top-menu= render "layouts/menu", container: yield(:container_class), menu: @theme ? "menu-#{@theme}" : nil, hide_logo: false
    = yield :header
    = yield
    = yield :footer
    = render "layouts/footer", container: yield(:container_class), footer: @theme ? "footer-#{@theme}" : nil
